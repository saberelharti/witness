<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/uploadedImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="#ccf"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_add"
        android:background="@drawable/backgournd_add_event"
        android:scaleType="centerInside"
        android:adjustViewBounds="true"
        android:padding="7dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:layout_alignBottom="@+id/uploadedImage"
        android:layout_alignRight="@+id/uploadedImage" />


    <EditText
        android:id="@+id/titleEvent"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:layout_below="@+id/uploadedImage"
        android:background="@drawable/background_input"
        android:gravity="center_vertical"
        android:hint="@string/password_placeholder"
        android:inputType="textPassword"
        android:textColor="@color/colorText"
        android:textColorHint="@color/colorText"
        android:textSize="12sp"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"/>


    <EditText
        android:id="@+id/descriptionEvent"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_gravity="center"
        android:background="@drawable/background_input"
        android:layout_below="@+id/titleEvent"
        android:gravity="center_vertical"
        android:hint="description"
        android:inputType="textMultiLine"
        android:textColor="@color/colorText"
        android:textColorHint="@color/colorText"
        android:textSize="12sp"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp" />

    <AutoCompleteTextView
        android:id="@+id/locationEvent"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:background="@drawable/background_input"
        android:layout_below="@+id/descriptionEvent"
        android:gravity="center_vertical"
        android:hint="location"
        android:inputType="textAutoComplete"
        android:textColor="@color/colorText"
        android:textColorHint="@color/colorText"
        android:textSize="12sp"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp" />


    <EditText
        android:id="@+id/hashTagEvent"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:background="@drawable/background_input"
        android:layout_below="@+id/locationEvent"
        android:gravity="center_vertical"
        android:hint="hashTags"
        android:inputType="textMultiLine"
        android:textColor="@color/colorText"
        android:textColorHint="@color/colorText"
        android:textSize="12sp"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp" />

    <EditText
        android:id="@+id/timePickerEvent"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:background="@drawable/background_input"
        android:layout_below="@+id/locationEvent"
        android:gravity="center_vertical"
        android:hint="hh:min .. dd/mm/yyyy"
        android:inputType="textMultiLine"
        android:textColor="@color/colorText"
        android:textColorHint="@color/colorText"
        android:textSize="12sp"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp" />

    <Switch
        android:layout_width="150dp"
        android:layout_height="45dp"
        android:text="anonym"
        android:layout_below="@+id/timePickerEvent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"/>

</RelativeLayout>