<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        app:cardCornerRadius="7dp"
        android:id="@+id/cardView">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/descriptionFragmentHeader"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_alignParentTop="true"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="@drawable/background_diagonal"
                android:layout_alignParentTop="true" />

            <TextView
                android:id="@+id/descriptionFragmentTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Set your nearby event \ndistance radious"
                android:textColor="@color/colorText"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/descriptionFragmentHeader"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_below="@+id/descriptionFragmentSeparator">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20"
                    android:textSize="14sp"
                    android:textColor="@color/middleColor"
                    android:layout_marginLeft="15dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"/>

                <TextView
                    android:id="@+id/descriptionFragmentNearbyDistance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="60 km"
                    android:textSize="14sp"
                    android:textColor="@color/middleColor"
                    android:layout_marginRight="15dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"/>

                <SeekBar
                    android:id="@+id/descriptionFragmenSeekBar"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:max="80"
                    android:progress="25"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:progressDrawable="@drawable/seekbar_nearby"
                    android:thumb="@drawable/cercle_thumb"
                    android:maxHeight="20dp"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/descriptionFragmentSeparator"
                android:layout_width="80dp"
                android:layout_height="3dp"
                android:background="@drawable/separator"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/descriptionFragmentTitle" />


        </RelativeLayout>


    </android.support.v7.widget.CardView>




</RelativeLayout>