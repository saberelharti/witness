<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="160dp"
    android:layout_height="200dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="7dp">

        <ImageView
            android:id="@+id/cardEventMedia"
            android:layout_width="160dp"
            android:layout_height="140dp"/>

        <TextView
            android:id="@+id/CardEventTitle"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="12sp"
            android:textColor="@color/colorText"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_below="@+id/cardEventMedia"
            android:layout_alignParentLeft="true" />

        <ImageView
            android:id="@+id/menuEvent"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/ic_more"
            android:scaleType="centerInside"
            android:adjustViewBounds="true"
            android:layout_marginTop="8dp"
            android:background="@android:color/transparent"
            android:layout_toRightOf="@+id/CardEventTitle"
            android:layout_below="@+id/cardEventMedia" />

        <ImageView
            android:id="@+id/timer"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/ic_time"
            android:scaleType="centerInside"
            android:adjustViewBounds="true"
            android:layout_margin="5dp"
            android:layout_below="@+id/CardEventTitle"
            android:layout_alignParentLeft="true"/>

        <TextView
            android:id="@+id/cardEventTime"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/colorText"
            android:textSize="10sp"
            android:layout_marginTop="7dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_below="@id/CardEventTitle"
            android:layout_toEndOf="@+id/timer"
            android:layout_toRightOf="@+id/timer" />

        <ImageView
            android:id="@+id/maps"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/ic_maps"
            android:tint="@color/colorText"
            android:scaleType="centerInside"
            android:adjustViewBounds="true"
            android:layout_margin="5dp"
            android:layout_below="@id/CardEventTitle"
            android:layout_toEndOf="@+id/cardEventTime"
            android:layout_toRightOf="@+id/cardEventTime" />

        <TextView
            android:id="@+id/cardEventLocation"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="10sp"
            android:textColor="@color/red"
            android:layout_marginTop="7dp"
            android:layout_marginRight="5dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_below="@id/CardEventTitle"
            android:layout_toEndOf="@+id/maps"
            android:layout_toRightOf="@+id/maps" />

    </RelativeLayout>

</android.support.v7.widget.CardView>