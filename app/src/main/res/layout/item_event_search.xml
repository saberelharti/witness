<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/searchEventContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_margin="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingRight="10dp">

            <ImageView
                android:id="@+id/eventSearchImage"
                android:layout_width="120dp"
                android:layout_height="150dp"
                android:layout_marginRight="10dp"
                android:background="#e2e2e2"
                android:adjustViewBounds="true"/>

            <TextView
                android:id="@+id/eventViews"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/background_round_view_green"
                android:drawableTop="@drawable/ic_white_event"
                android:drawableTint="@android:color/white"
                android:textSize="11sp"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:padding="2dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_margin="5dp"/>

            <TextView
                android:id="@+id/eventSearchTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/eventSearchImage"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:textColor="@color/colorText"
                android:textSize="16sp"
                android:maxLines="1"/>

            <ImageView
                android:id="@+id/searchTimer"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/ic_time"
                android:scaleType="centerInside"
                android:adjustViewBounds="true"
                android:layout_below="@+id/eventSearchTitle"
                android:layout_toRightOf="@+id/eventSearchImage"/>

            <TextView
                android:id="@+id/cardEventTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="56 min ago"
                android:textColor="@color/colorText"
                android:textSize="10sp"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_below="@id/eventSearchTitle"
                android:layout_toEndOf="@+id/searchTimer"
                android:layout_toRightOf="@+id/searchTimer" />

            <ImageView
                android:id="@+id/maps"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/ic_maps"
                android:tint="@color/colorText"
                android:scaleType="centerInside"
                android:adjustViewBounds="true"
                android:layout_marginRight="5dp"
                android:layout_below="@id/eventSearchTitle"
                android:layout_toEndOf="@+id/cardEventTime"
                android:layout_toRightOf="@+id/cardEventTime" />

            <TextView
                android:id="@+id/cardEventLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="los Angeles"
                android:textSize="10sp"
                android:textColor="@color/red"
                android:layout_marginTop="2dp"
                android:layout_below="@id/eventSearchTitle"
                android:layout_toEndOf="@+id/maps"
                android:layout_toRightOf="@+id/maps" />

            <FrameLayout
                android:id="@+id/deviderEvent"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#968b7e7e"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="10dp"
                android:layout_below="@id/searchTimer"
                android:layout_toRightOf="@+id/eventSearchImage"/>

            <TextView
                android:id="@+id/eventSearchDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/deviderEvent"
                android:layout_toRightOf="@+id/eventSearchImage"
                android:ellipsize="end"
                android:maxLines="3"
                android:text="event  descpr"
                android:textColor="@color/colorText"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/gridCategoryTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="text"
                android:textColor="@android:color/white"
                android:background="@drawable/background_button_category_desac"
                android:gravity="center"
                android:textSize="12sp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingRight="8dp"
                android:paddingLeft="8dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/eventSearchImage" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>